{% extends 'base.html.twig' %}

{% block search %}
<div class="col">
    <div class="total">
        <h2>Total: {{ data|length }}</h2>
    </div>
    <div class="search">
        <input type="text" name="" id="" placeholder="Search...">
        <button>Search</button>
    </div>
</div>
{% endblock %}

{% block body %}
<table width="100%" cellpadding="0" cellspacing="0" border="0" class="tbl-list">
    <tr>
        <th>Sl No</th>
        <th>Name</th>
        <th>Email</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>
    {% set counter = 0 %}
    {% for student in data %}
    {% set counter = counter + 1 %}
    <tr>
        <td>{{ counter }}</td>
        <td>{{ student.name }}</td>
        <td>{{ student.email }}</td>
        <td>{{ student.createdDate|date("m/d/Y") }}</td>
        <td class="action">
            <span><a href = "{{ path('app_student_update', { 'id' : student.Id }) }}">Edit</a></span>
            <span><a href = "{{ path('app_student_delete', { 'id' : student.Id }) }}">Delete</a></span>
        </td>
    </tr>
    {% endfor %}
</table>
{% endblock %}
