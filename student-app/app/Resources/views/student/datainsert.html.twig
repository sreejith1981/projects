{% extends 'base.html.twig' %}

{% block header %}
<a href="{{ path('app_student_display') }}">Home</a>
{% endblock %}

{% block subheader %}
<h2>Save student details</h2>
{% endblock %}

{% block content %}
{{ form_start(form, { 'attr': {'class': 'forms'} }) }}
{{ form_errors(form) }}
<p>
    {{ form_label(form.name, null, {'label_attr': {'class': 'label'}}) }}
    {{ form_widget(form.name, { 'attr': {'class': 'text'} }) }}
    <span class="error">
        {% for error in form.name.vars.errors %}
        {{ error.message }} <br/>
        {% endfor %}
    </span>
</p>
<p>
    {{ form_label(form.email, null, {'label_attr': {'class': 'label'}}) }}
    {{ form_widget(form.email, { 'attr': {'class': 'text'} }) }}
    <span class="error">
        {% for error in form.email.vars.errors %}
        {{ error.message }} <br/>
        {% endfor %}
    </span>
</p>
<p>
    {{ form_label(form.createdDate, null, {'label_attr': {'class': 'label'}}) }}
    {{ form_widget(form.createdDate, { 'attr': {'class': 'text'} }) }}
    <span class="error">
        {% for error in form.createdDate.vars.errors %}
        {{ error.message }} <br/>
        {% endfor %}
    </span>
</p>
<p>
{{ form_widget(form.save, { 'attr': {'class': 'button'} }) }}
</p>
{{ form_end(form) }}
{% endblock %}
